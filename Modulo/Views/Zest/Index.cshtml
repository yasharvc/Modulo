@{
    ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<button type="button" class="w3-amber w3-btn" onclick="ajax1()">$.ajax 1</button>
<button type="button" onclick="post1()">$.post 1</button>
<form method="post" action="LoadData" enctype="application/x-www-form-urlencoded">
	<input id="Name" name="Name" placeholder="Name..." />
	<input id="Age" name="Age" type="number" placeholder="Age..." />
	<button type="submit">ارسال</button>
</form>
<div id="result">

</div>
<script>
	function ajax1() {
		$.ajax({
			url: '/ctrl/action?xyz=200',
			data: { id: 1 ,name:'yashar'},
			dataType: 'json',
			method:'POST',
			success: function (result) {
				$('#result').html(result);
			}
		});
	}
	function post1() {
		$.post({
			url: '/ctrl/action?xyz=200',
			data: { id: 1, name: 'yashar' },
			success: function (result) {
				$('#result').html(result);
			}
		});
	}
</script>